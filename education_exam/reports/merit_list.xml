<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_merit_list">
            <t t-call="web.html_container">
                <t t-foreach="get_sections(docs)" t-as="section">
                    <t t-set="student_count" t-value="get_student_count(section)"/>
                     <t t-call="education_exam.external_layout_evaluation">
                        <t t-set="exam_list" t-value="get_exams(docs)" />
                         <t t-set="result" t-value="get_results(docs)" />
                         <t t-set="exam_count" t-value="len(exam_list)"/>
                         <style>
                            table, th, td {
                                     border: 1px solid black;
                                    padding-bottom:3px;
                                    padding-left:3px;
                                    padding-top:3px;
                                    padding-right:3px;
                                    }
                             .dont_split{
                               page-break-inside: avoid !important;
                                }
                            rotate(-90deg);-webkit-transform: rotate(-90deg);-moz-transform: rotate(-90deg);  -o-transform: rotate(-90deg); -ms-transform: rotate(-90deg);
                             .right_top{
                            float:right;
                            padding-top:0px;
                            }
                            .left_top{
                            float:left;
                            padding-top:0px;
                            }
                            .center_top{
                            float:left;
                            padding-top:0px;
                            padding-left:500px;
                            }
                            .right{
                            float:right;
                            padding-top:10px;
                            }
                            .rotatetext{
                                writing-mode: vertical-rl;
                                text-orientation: mixed;
                            }
                         </style>
                         <div class="page">
                            <div class="oe_structure">
                                <div class="row" >
                                    <div class="col-xs-12" style="text-align:center;">
                                        <t t-set="level" t-value="m"/>
                                        <h4>
                                            <t t-foreach="exam_list" t-as="exam">
                                                <t t-if="exam_first">
                                                    <t t-set="level" t-value="exam.class_id"/>
                                                    <t t-esc="exam.name"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-if="exam_last">
                                                        <t t-esc="' and '"/>
                                                    </t>
                                                    <t t-esc="','+exam.name"/>
                                                </t>
                                                <t t-if="exam_last">
                                                    <t t-esc="'Examination'"/>
                                                    <t t-esc="exam.academic_year.ay_code"/>
                                                </t>
                                            </t>
                                        </h4>

                                    </div>
                                    <div class="col-xs-12" style="text-align:center;">
                                        <h5><t t-esc="'Class - '+ level.code"/> </h5>
                                    </div>

                                </div>
                                <div class="row">
                                        <div class="col-xs-6" text_align="center">
                                            <h5>
                                                Section: <t t-esc="section.display"/>
                                            </h5>
                                        </div>
                                        <div class="col-xs-6" style="text-align:right; padding-right:20px;">
                                            <h5>
                                                Group:
                                                <t t-if="section.division_id">
                                                    <t t-esc="section.division_id.name"/>
                                                </t>
                                                <t t-else="">
                                                    N/A
                                                </t>
                                            </h5>
                                        </div>
                                </div>
                            <div class="row">
                                <table width="100%">
                                    <t t-set="converted_report" t-value="get_converted_report(docs)"/>

                                        <tr class="dont_split"><td rowspan="2">Roll</td><td rowspan="2">ID</td>
                                            <td rowspan="2" style="text-align : center;">Name</td>
                                            <td rowspan="2" style="text-align : center;">Category</td>
                                            <t t-if="exam_count>1" >
                                                <t t-foreach="exam_list" t-as="exam">
                                                    <td colspan="3"><t t-esc="exam.exam_type.name"/></td>
                                                </t>
                                                <td colspan="3">
                                                    Total</td><p>&lt;/tr&gt;</p><p>&lt;tr&gt;</p>
                                                <t t-foreach="exam_list" t-as="exam">
                                                    <td rowspan="2" style="text-align : center;">GPA </td>
                                                    <!--<td rowspan="2" style="text-align : center;">GPA <p font-size="8">(with 4th subjects)</p>-->
                                                <td >Score</td><td >Position In Section</td><td class="rotate">Position In Class</td>
                                                </t>
                                                <td >Score</td><td >Position In Section</td><td >Position In Class</td>
                                            </t>

                                        <t t-else="">
                                            <td rowspan="2" style="text-align : center;">GPA <br/>With 4th Subject</td>
                                            <td rowspan="2" style="text-align : center;">GPA</td>
                                            <td  rowspan="2" style="text-align : center;">Total Marks</td>
                                            <t t-if="converted_report">
                                                <td  rowspan="2" style="text-align : center;">Converted Marks</td>
                                            </t>
                                            <td rowspan="2" style="text-align : center;">Position In Section</td>
                                            <td rowspan="2" style="text-align : center;">Position In Class</td>
                                            <p>&lt;/tr&gt;</p>
                                            &lt;tr&gt;
                                        </t>
                                        </tr>
                                        <t t-foreach="exam_list" t-as="exam">
                                            <t t-set="result_lines" t-value="get_result_line(exam,section)"/>
                                            <t t-foreach="result_lines" t-as="result_line">
                                                <tr class="dont_split">
                                                    <td><t t-esc='"{:02d}".format(result_line.roll_no)'/></td>
                                                    <td><t t-esc="result_line.student_id.student_id"/></td>

                                                    <td><t t-esc="result_line.student_name"/></td>

                                                    <td style="text-align : center;">
                                                        <t t-esc="result_line.student_id.student_category"/></td>
                                                    <t t-set="fail_count" t-value="result_line.general_fail_count"/>
                                                    <td style="text-align : center;">
                                                        <t t-esc="round(result_line.net_gpa,2)"/>
                                                        <t t-if="fail_count>0">
                                                            <t t-esc="'('+str(fail_count)+'F)' "/>
                                                        </t>
                                                    </td>
                                                    <td style="text-align : center;">
                                                        <t t-esc="round(result_line.general_gpa,2)"/>
                                                        <t t-set="fail_count" t-value="result_line.general_fail_count"/>
                                                        <t t-if="fail_count>0">
                                                            <t t-esc="'('+str(fail_count)+'F)' "/>
                                                        </t>
                                                    </td>
                                                    <!--<td style="text-align : center;">-->
                                                        <!--<t t-set="NETGPA" t-value="result_line.net_gpa"/>-->
                                                        <!--<t t-if="5>NETGPA">-->
                                                            <!--<t t-if="NETGPA==0">-->
                                                                <!--0-->
                                                            <!--</t>-->
                                                            <!--<t t-else="">-->
                                                                <!--<t t-esc="round(NETGPA,2)"/>-->
                                                            <!--</t>-->
                                                        <!--</t>-->
                                                        <!--<t t-else="">-->
                                                            <!--5-->
                                                        <!--</t>-->

                                                        <!--<t t-if="fail_count>0">-->
                                                            <!--<t t-esc="'('+str(fail_count)+'F)'"/>-->
                                                        <!--</t>-->
                                                    <!--</td>-->
                                                    <t t-if="converted_report">
                                                        <td style="text-align : center;"><t t-esc="result_line.net_obtained_converted"/></td>
                                                    </t>
                                                    <td style="text-align : center;"><t t-esc="result_line.net_obtained"/></td>
                                                    <td style="text-align : center;"><t t-esc="result_line.merit_section"/></td>
                                                    <td style="text-align : center;"><t t-esc="result_line.merit_class"/></td>
                                                </tr>
                                            </t>
                                    </t>
                                </table>
                            </div>
                            </div>
                             <br/>
                             <br/>
                                <br/>

                        </div>
                     </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
